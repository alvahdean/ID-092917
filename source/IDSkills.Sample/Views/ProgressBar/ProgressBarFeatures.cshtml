@{
    ViewBag.Title = "ProgressBar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>ProgressBar Features:</h2>
<br/>
<li> Default</li>
<li> Theme - Flat-Azure-Dark</li>
<br/>
<div id = "ControlRegion">
<div class="imgframe">
        <div class="control">
            <span class="txt">Water Purification</span>
            <ej-Progress-bar id="defaultBar" value="45" height="20px" create="oncreate" />
        </div>
    </div>
    <script>
        function oncreate() {
            var progress;
            progress = $("#defaultBar").data("ejProgressBar");
            progress.setModel({ text: progress.getPercentage() + " %" });
        }
    </script>
    <style type="text/css" class="cssStyles">
        .imgframe {
            background: url("../images/ProgressBar/water.png") no-repeat scroll 0 0 transparent;
            height: 185px;
            padding: 60px;
            width: 480px;
            margin: 0 auto;
        }
        .txt {
            color: #676767;
            display: block;
            font-size: 21px;
            margin-bottom: 12px;
        }
    </style>
</div>
