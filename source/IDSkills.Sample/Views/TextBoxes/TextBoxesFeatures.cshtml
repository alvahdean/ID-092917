@{
    ViewBag.Title = "TextBoxes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>TextBoxes Features:</h2>
<br/>
<li> Default</li>
<li> Theme - Flat-Azure-Dark</li>
<br/>
<div id = "ControlRegion">
<div class="frame">
        <div class="row">
            <div class="col-xs-6 col-sm-3"><span>Kilometers</span></div>
            <div class="col-xs-6 col-sm-3">
                <ej-numeric-text-box id="numeric" value="1000" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-3">
                <span>Service Tax</span>
            </div>
            <div class="col-xs-6 col-sm-3">
                <ej-percentage-text-box id="percent" value="100" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-3">
                <span>Fare</span>
            </div>
            <div class="col-xs-6 col-sm-3">
                <ej-currency-text-box id="currency" value="50" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-3">
                <span>Mobile No</span>
            </div>
            <div class="col-xs-6 col-sm-3">
                <ej-mask-edit id="maskedit" mask-format="99-999-99999" input-mode="@InputMode.Text" watermark-text="99-999-99999" />
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-3"></div>
            <div class="col-xs-6 col-sm-3">
                <ej-button id="btn" size="@ButtonSize.Small" text="PayBill" />
            </div>
        </div>
    </div>
 <style>
        .frame {
            width: 30%;
        }
        .col-xs-6.col-sm-3 {
            padding: 5px;
        }
    </style>
</div>
